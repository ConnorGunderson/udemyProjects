<%- include('partials/header') %> 

    <div class="ui main container">
        <div class="ui two column centered grid">
            <ui class="column">
                <h1 class="ui dividing header">Add a New Book!</h1>
            </ui>
        </div>
        <div class="ui orange inverted segment">
            <form action="/books" method="POST" class="ui form">
            <div class="two fields">
                <div class="field">
                    <label>Title of the book</label>
                    <input type="text" name="book[title]" placeholder="Book Title" required>
                </div>
                <div class="field">
                    <label>Author</label>
                    <input type="text" name="book[author]" placeholder="Author" required>
                </div>
            </div>
            <div class="ui two column centered grid">
                <div class="ui column field">
                    <label>Book Cover Url</label>
                    <input type="text" name="book[image]" placeholder="Image Url" required>
                </div>
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="book[description]" placeholder=".." required></textarea>
            </div>
            <div class="field">
                <div class="ui four column centered grid">
                    <div class="column">
                        <button type="submit" class="ui fluid basic button" tabindex="0">Submit</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>

<%- include('partials/footer') %> 