<%- include('partials/header') %> 
    
    <div class="container-fluid">
        <header class="jumbotron pb-3">
            <div class="container p-0 m-0">
                <h1>Welcome to YelpCamp</h1>
                <p class="lead">View our best campgrounds</p>
                <p>
                    <a href="/campgrounds/new" class="btn btn-info btn-lg">
                        Add New Campground
                    </a>
                </p>
            </div>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <h3>Our Most Popular Camp Grounds</h3>
            </div>
        </div>

        <div class="row thumbnail-flex overflow-hidden">
            <% campgrounds.forEach((camp) => { %> 
                <div class="col-md-3 col-sm-6 text-center">
                    <div class="img-thumbnail">
                        <img src="<%= camp.image %>" class="img-fluid w-100">
                        <div class="caption">
                            <h4> <%= camp.name %>  </h4>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
        <a href="/campgrounds/new" class="">Add new campgrounds</a>
    </div>
<%- include('partials/footer') %> 
