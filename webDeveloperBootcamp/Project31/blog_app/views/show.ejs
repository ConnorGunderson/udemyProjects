<%- include('partials/header') %> 
<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %> 
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui semantic rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= blog.body %> </p>
            </div>
            <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete the post</button>
            </form>
            <a action="/blog/<%= blog._id %>/edit" class="ui green inverted button">
                Update
            </a>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 