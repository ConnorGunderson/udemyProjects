<%- include('partials/header') %> 

    <div class="ui main text container">
        <h1 class="ui huge header center aligned">Welcome to the Blog</h1>
        <div class="ui top attached ">
            <div class="ui divided items">
                <% blog.forEach((blog) => { %> 
                    <div class="item">
                        <div class="image" style='min-height:300px'>
                            <img src="<%= blog.image %>" class="ui fluid rounded image">
                        </div>
                        <div class="middle aligned content">
                            <a href="/blog/<%= blog._id %> "><%= blog.title %></a>
                            <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                            </div>
                            <div class="decription">
                                <p><%- blog.body.substring(0, 100) %></p>
                            </div>
                            <div class="extra">
                                <div class="ui two column middle aligned grid">
                                    <div class="center aligned column">
                                        <a href="/blog/<%= blog._id %> " class="ui primary floated fluid inverted button">
                                            Show More <i class="right chevron icon"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% })  %> 
            </div>
        </div>  
    </div>
    

<%- include('partials/footer') %> 